{
	"name": "udamuri/slimApi",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["api", "rest", "router", "psr4"],
    "homepage": "http://github.com/udamuri/slimApi",
    "license": "MIT",
    "authors": [
        {
            "name": "Muri Budiman",
            "email": "udamuri@gmail.com",
            "homepage": "https://udamuri.github.io/"
        }
    ],
    "require": {
    	"php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.22",
		"illuminate/database": "~5.1",
        "dhorrigan/capsule": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "mockery/mockery": "0.9.*"

    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public public/index.php",
        "test": "phpunit"
    }
}
